{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "(dev) Build containers",
      "type": "shell",
      "command": "docker compose -f compose.dev.yaml build",
      "problemMatcher": []
    },
    {
      "label": "(dev) Start containers",
      "type": "shell",
      "command": "docker compose -f compose.dev.yaml up",
      "problemMatcher": []
    },
    {
      "label": "(dev) Build and start containers",
      "type": "shell",
      "dependsOn": ["(dev) Build containers", "(dev) Start containers"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "(dev) Stop containers",
      "type": "shell",
      "command": "docker compose -f compose.dev.yaml down",
      "problemMatcher": []
    },
    {
      "label": "(dev) Remove containers",
      "type": "shell",
      "command": "docker compose -f compose.dev.yaml rm",
      "problemMatcher": []
    },
    {
      "label": "(dev) Stop and remove containers",
      "type": "shell",
      "dependsOn": ["(dev) Stop containers", "(dev) Remove containers"],
      "dependsOrder": "sequence"
    },
    {
      "label": "(dev) remove mongo_data",
      "type": "shell",
      "command": "read \"answer?Are you sure you want to remove the volume 'projetochamada_mongo_data'? (y/n): \" && if [[ $answer == [Yy] ]]; then docker volume remove projetochamada_mongo_data && echo \"Volume 'projetochamada_mongo_data' has been removed.\"; else echo \"Operation cancelled.\"; fi",
      "problemMatcher": []
    }
  ]
}
